# ----------------------------
# Database (local development)
# ----------------------------
DATABASE_URL="postgres://USER:PASSWORD@localhost:5432/hypnate_db"

# ----------------------------
# Database (staging - Render + Neon)
# Use this format on Render:
# postgresql://USER:PASSWORD@HOST/neondb?sslmode=require
# ----------------------------
# DATABASE_URL="postgresql://YOUR_NEON_USER:YOUR_NEON_PASS@YOUR_NEON_HOST/neondb?sslmode=require"


# ----------------------------
# Redis (local)
# ----------------------------
REDIS_URL="redis://localhost:6379"

# ----------------------------
# Redis (Render Redis FREE)
# Example format:
# rediss://default:PASS@HOST:PORT
# ----------------------------
# REDIS_URL="rediss://default:YOUR_REDIS_PASS@YOUR_REDIS_HOST:YOUR_REDIS_PORT"


# ----------------------------
# Server
# ----------------------------
PORT=4000

# ----------------------------
# Authentication (JWT)
# ----------------------------
JWT_SECRET="your-jwt-secret"
TOKEN_EXPIRY="7d"

# ----------------------------
# Optional: Cloudinary (if used)
# ----------------------------
CLOUDINARY_CLOUD_NAMe=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

